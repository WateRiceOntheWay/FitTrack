<!--pages/me/me.wxml-->
<!--导航栏-->

<cu-custom bgColor="bg-gradual-pink" isBack="{{false}}">
    <view slot="backText">返回</view>
    <view slot="content">FitTrack</view>
</cu-custom>

<view class="signup-container">
    <view class="margin-sm radius-lg bg-white shadow">
        <!-- 标题栏 -->
        <!-- 布局左右 -->
        <view class="flex solid-bottom padding-xs justify-between">

            <!-- 标题 -->
            <view class="padding-sm margin-xs radius">
              <view class="cu-bar">
                    <view class="action sub-title">
                       <text class="text-xxxl text-black text-black test-bold">个人中心</text>
                       <text class="text-ABC text-black">个人中心</text>
                         <!-- last-child选择器-->
                       </view>
                       
                    </view>
            </view>
        </view>
        <view class="flex">
    
          <!--头像点击-->
          <view class="flex-sub bg-white padding-xs margin-xs ">
            <view class="cu-bar btn-group ">
                <button class="cu-btn round text-black line-black shadow" bindtap="showModal"data-target="RadioModal" style="height: 84rpx;"><text class="text-lg">头像</text></button>
            </view>
          </view>

         <view class="cu-modal {{modalName=='RadioModal'?'show':''}}" bindtap="hideModal">
            <view class="cu-dialog" catchtap>
              <radio-group class="block">
                <view class="cu-list menu  text-left">
                  <view class="cu-item" wx:for="{{5}}" wx:key="item">
                      <label class="flex justify-between align-center flex-sub">
                        <view class="flex-sub">选项 {{index +1}}</view>
                        <radio class="round"></radio>
                      </label>
                  </view>
                </view>
              </radio-group>
            </view>
          </view>
          <view class="flex-twice padding-xs margin-xs animation-slide-bottom" style="animation-delay:0.05s">
              <view class="bg-blue radius-lg ">
                  <view class="cu-bar">
                      <view class="action title">
                        <text class="text-xxl  text-white padding-right-xl">用户A</text>
                      </view>
              
                  </view>
             </view>
          </view>
        </view>

        <!--添加累计消耗卡路里和累计里程和???卡片-->
        <!--添加消耗卡路里卡片-->
        <view class="flex">
          <view class="flex-sub padding-sm margin-xs animation-slide-bottom" style="animation-delay:0.1s">
            <view class="cu-card  bg-blue shadow-lg radius-lg ">
                <view class="cu-bar">
                    <view class="action title">
                        <text class="text-xl text-bold text-white">累计消耗卡路里</text>
                    </view>
                </view>
                <view class="cu-list menu padding-xs">
                    <view class="cu-item radius-df">
                        <view class="action">
                            <view class="text-blue text-bold">300 kcal</view>
                        </view>
                    </view>
                </view>
            </view>
            
          </view>
          <!--添加消耗里程卡片-->
          <view class="flex-sub padding-sm margin-xs animation-slide-bottom" style="animation-delay:0.1s">
            <view class="cu-card  bg-blue shadow-lg radius-lg ">
                <view class="cu-bar">
                    <view class="action title">
                        <text class="text-xxl text-bold text-white">累计里程</text>
                    </view>
                </view>
                <view class="cu-list menu padding-xs">
                    <view class="cu-item radius-df">
                        <view class="action">
                            <view class="text-blue text-bold">300km</view>
                        </view>
                    </view>
                </view>
            </view>
          </view>
          <!--添加未知功能卡片-->
          <view class="flex-sub padding-sm margin-xs animation-slide-bottom" style="animation-delay:0.1s">
            <view class="cu-card  bg-blue shadow-lg radius-lg ">
                <view class="cu-bar">
                    <view class="action title">
                        <text class="text-xxl text-bold text-white">???</text>
                    </view>
                </view>
                <view class="cu-list menu padding-xs">
                    <view class="cu-item radius-df">
                        <view class="action">
                            <view class="text-blue text-bold">?</view>
                        </view>
                    </view>
                </view>
            </view>
          </view>
        </view>
    </view>
</view>

<!-- 增加距离防止被tabbar挡住 -->
<view class="padding-xxl margin-xxl"></view>

<!-- 底部tabbar -->

<view class="cu-bar foot tabbar  bg-black margin-top-xs">
    <view class="action text-gray" bind:tap="toToday">
        <view class="cuIcon-formfill"></view>
        Today
    </view>
    <view class="action text-gray" bind:tap="toRecording">
        <view class="cuIcon-rank"></view>
        历史记录
    </view>
    <view class="action text-gray" bind:tap="toCommunity">
        <view class="cuIcon-community">
            <!-- <view class="cu-tag badge">99</view> -->
        </view>
        社区
    </view>
    <view class="action text-pink">
        <view class="cuIcon-my">
            <!-- <view class="cu-tag badge"></view> -->
        </view>
        我
    </view>
</view>