/* pages/login/login.wxss */
page{
  height: 100%;    /* 使用page的height可以使页面占全屏 */
  background-color: #fafafa;
 }
.signup-container{
  padding: 0 10%;
  height: 100%;
}
.title{
  font-size: large;
  text-align: center;
  padding-top: 10%;
  font-weight: bold;
}
.signup-box{
  margin-top: 10%;
  padding: 10% 5%;
  background-color: white;
  border-radius: 10px;
  box-shadow: 0 4px 4px #888888;
}
.login-box>input{
  margin: 5% 0 8% 0;
  border-bottom: 1rpx solid lightgray;
}
.login-box-input{
  margin: 5% 0 8% 0;
  border-bottom: 1rpx solid lightgray;
}
.signup-btn{
  width: 100%!important;
  background-color: #2f6afd;
  color: white;
  font-weight: normal;
}

.three-line{
  margin: 8% 0;
  text-align: center;
  font-size: 12px;
  color: gray;
}

.notation{
  font-size: 8%;
  color: red;
  margin: 0 0 3% 1%;
}
